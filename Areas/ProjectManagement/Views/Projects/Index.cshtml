@model List<Project>
@{
    //Razor Block
    ViewData["Title"] = "Projects";
    //Lab 5 - Search Parameters 
    bool searchPerformed = ViewData["SearchPerformed"] as bool? ?? false;
    string searchString = ViewData["SearchString"] as string;
}
<div class="text-center text-light">

    @if (Model.Any())
    {
        <h1 class="display-2">Projects</h1>
        <hr />
        <table class="table table-dark table-bordered table-striped">

            <thead>
                <tr class="fw-bolder">
                    <td scope="col">ID</td>
                    <td scope="col">Name</td>
                    <td scope="col">Description</td>
                    <td scope="col">Status</td>
                    <td scope="col">Actions</td>
                    <td scope="col">Summary</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <th class="td-desc" scope="row"> @project.ProjectId</th>
                        <td class="td-desc"> @project.Name</td>
                        <td class="td-desc"> @project.Description</td>
                        <td class="td-desc"> @project.Status</td>
                        <td class="td-desc">
                            <a asp-action="Details" asp-route-id="@project.ProjectId" class="btn btn-primary">Details</a>

                            <a asp-action="Index" asp-route-projectId="@project.ProjectId" asp-area="ProjectManagement" asp-controller="Tasks" class="btn btn-primary mx-4">Manage Tasks</a>

                            <a asp-action="Delete" asp-route-id="@project.ProjectId" class="btn btn-danger">Delete</a>
                        </td>
                        <td>
                            @await Component.InvokeAsync("ProjectSummary", project.ProjectId)
                        </td>

                    </tr>

                }
            </tbody>
        </table>

    }
    else
    {
        if (searchPerformed)
        {
            <p>No projects name with name "@searchString".</p>
        }
        else
        {
            <h1 class="display-2 mb-5">No projects</h1>
        }
    }

    <hr />
    <div>
        <a class="btn btn-primary text-light" asp-area="ProjectManagement" asp-controller="Projects" asp-action="Create">Create Project</a>
    </div>
</div>