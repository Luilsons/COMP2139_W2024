@*
    Lab 6 Navbar partial view
*@
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<nav id="nav-main" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow mb-3">
    <div class="container-fluid">
        <a id="nav-logo" class="navbar-brand mr-5" asp-area="" asp-controller="Home" asp-action="Index">MVC Application</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-house m-2" viewBox="0 0 16 16">
                            <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z" />
                        </svg>
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="About">
                        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-info-circle m-2" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                            <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                        </svg>
                        About
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" asp-area="ProjectManagement" asp-controller="Projects" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-journal-bookmark-fill m-2" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M6 1h6v7a.5.5 0 0 1-.757.429L9 7.083 6.757 8.43A.5.5 0 0 1 6 8z" />
                            <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2" />
                            <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1z" />
                        </svg>
                        Projects
                    </a>
                </li>
            </ul>
            <!-- Search Form -->
            <div class="container">
                <div class="row justify-content-end">
                    <div class="col-md-4">
                        <form class="d-flex" asp-area="" asp-controller="Home" asp-action="GeneralSearch" method="get">
                            <input class="form-control" type="text" placeholder="Search" name="searchString">
                            <select class="form-control btn btn-secondary dropdown-toggle mx-3" name="searchType">
                                <option value="Projects">Projects</option>
                                <option value="Tasks">Tasks</option>
                            </select>
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Lab 8 -->
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage your account">
                                <i class="fa fa-user-circle m-2"></i>
                                Profile
                            </a>
                        </li>

                        <li class="nav-item">
                            <form class="nav-link d-flex align-items-center" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                <button type="submit" class="nav-link btn btn-link text-secondary" style="cursor:pointer">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
                
            }
            else
            {
                <div class="d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-area="Identity" asp-page="/Account/Login">
                                <i class="fa fa-sign-in-alt m-2"></i>
                                Login
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-area="Identity" asp-page="/Account/Register">
                                <i class="fa fa-user-plus m-2"></i>
                                Register
                            </a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </div>
</nav>
