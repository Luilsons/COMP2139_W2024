@model List<Project>
@{
    //Razor Block
    ViewData["Title"] = "Projects";
}
<div class="text-center text-light">

    @if (Model.Any())
    {
        <h1 class="display-2">Projects</h1>
        <hr />
        <table class="table table-dark table-bordered table-striped">

            <thead>
                <tr class="fw-bolder">
                    <td scope="col">ID</td>
                    <td scope="col">Name</td>
                    <td scope="col">Description</td>
                    <td scope="col">Status</td>
                    <td scope="col">Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <th scope="row"> @project.ProjectId</th>
                        <td> @project.Name</td>
                        <td> @project.Description</td>
                        <td> @project.Status</td>
                        <td class="row-info">
                            <a asp-action="Details" asp-route-id="@project.ProjectId" class="btn btn-primary">Details</a>
                            <a asp-controller="Tasks" asp-action="Index" asp-route-projectId="@project.ProjectId" class="btn btn-primary">View Tasks</a>
                            <a asp-action="Delete" asp-route-id="@project.ProjectId" class="btn btn-danger">Delete</a>
                        </td>

                    </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <h1 class="display-2 mb-5">No projects</h1>
    }
    <hr />
    <div>
        <a class="btn btn-primary text-light" asp-area="" asp-controller="Projects" asp-action="Create">Create Project</a>
    </div>
</div>